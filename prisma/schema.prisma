generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BarberShop {
  id          String    @id @default(cuid())
  slug        String    @unique // Ex: "Pedro BarberShop"
  name        String
  description String?
  logoUrl     String?
  config      Json?     // save config for styles: { primary: "#000", font: "Roboto" }
  services    Service[]
  barbers     Barber[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Barber {
  id           String     @id @default(uuid())
  name         String
  imageUrl     String?
  description  String?
  
  // Tenant Isolation
  barberShopId String
  barberShop   BarberShop @relation(fields: [barberShopId], references: [id])

  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Booking {
  id           String     @id @default(uuid())
  date         DateTime
  time         String
  status       String
  barberId     String
  barber       Barber   @relation(fields: [barberId], references: [id])
}

model Service {
  id           String     @id @default(cuid())
  name         String
  description  String?
  price        Decimal
  duration     Int
  barberShopId String
  barberShop   BarberShop @relation(fields: [barberShopId], references: [id])
}